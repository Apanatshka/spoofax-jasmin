module lexical/JasminXT-Numbers
exports
  context-free start-symbols
    Int

  lexical syntax
    Int "." Int "d" -> Double 
    Int "." Int     -> Float  
    [0-9]+          -> Int    

  lexical restrictions
    Int -/- [0-9]

  context-free syntax
    Double -> Constant {cons("Double")}
    Float  -> Constant {cons("Float")}
    Int    -> Constant {cons("Int")}

  context-free syntax
    CONTENTCOMPLETE -> Constant {cons("COMPLETION-Constant")}